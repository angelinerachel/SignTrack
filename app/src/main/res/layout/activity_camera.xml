<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

  <!-- Header with App Title -->
  <LinearLayout
      android:id="@+id/headerLayout"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:gravity="center"
      android:background="@drawable/header_gradient_background"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/galada"
        android:text="SignTrack"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_margin="8dp" />
  </LinearLayout>

  <!-- Camera Preview -->
  <androidx.camera.view.PreviewView
      android:id="@+id/viewPreview"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_margin="16dp"
      app:layout_constraintTop_toBottomOf="@id/headerLayout"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toTopOf="@id/translationLayout" />

  <!-- Focus Circle -->
  <com.example.signtrack.FocusCircleView
      android:id="@+id/focusCircleView"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintTop_toTopOf="@id/viewPreview"
      app:layout_constraintBottom_toBottomOf="@id/viewPreview"
      app:layout_constraintStart_toStartOf="@id/viewPreview"
      app:layout_constraintEnd_toEndOf="@id/viewPreview" />

  <!-- Translation Box -->
  <LinearLayout
      android:id="@+id/translationLayout"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:background="@drawable/rounded_background"
      android:orientation="vertical"
      android:padding="16dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">

    <!-- Translation Title -->
    <TextView
        android:id="@+id/translationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Translation"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Translation Text -->
    <TextView
        android:id="@+id/translationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:text="Translation will appear here..."
        android:textColor="@android:color/black"
        android:textSize="14sp" />
  </LinearLayout>

  <!-- Button Back -->
  <ImageButton
      android:id="@+id/backButton"
      android:layout_width="60dp"
      android:layout_height="40dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:padding="8dp"
      android:src="@drawable/ic_back"
      android:contentDescription="Back button"
      android:background="?attr/selectableItemBackground"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <!-- Flash Toggle -->
  <ImageButton
      android:id="@+id/flashToggleIB"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_margin="10dp"
      android:background="?attr/selectableItemBackground"
      android:src="@drawable/flash_off"
      app:layout_constraintTop_toTopOf="@id/viewPreview"
      app:layout_constraintEnd_toEndOf="parent" />

  <!-- Flip Camera -->
  <ImageButton
      android:id="@+id/flipCameraIB"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_margin="10dp"
      android:background="?attr/selectableItemBackground"
      android:src="@drawable/flip_camera"
      app:layout_constraintTop_toBottomOf="@id/flashToggleIB"
      app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>